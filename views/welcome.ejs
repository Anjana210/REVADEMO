<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/echarts@5.5.0/dist/echarts.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <style>
    /* --- Base & Variables --- */
    :root {
      /* Dark mode variables */
      --bg-dark: #0F172A;
      --bg-light: #1E293B;
      --text-primary: #CBD5E1;
      --text-secondary: #94A3B8;
      --accent: #38BDF8;
      --table-border: #334155;
      --hover-bg: rgba(255, 255, 255, 0.03);
      --chart-text: #CBD5E1;
    }

    /* Light mode variables */
    [data-theme="light"] {
      --bg-dark: #F8FAFC;
      --bg-light: #FFFFFF;
      --text-primary: #1F2937;
      --text-secondary: #4B5563;
      --accent: #0284C7;
      --table-border: #E5E7EB;
      --hover-bg: rgba(0, 0, 0, 0.03);
      --chart-text: #1F2937;
    }

    *, *::before, *::after {
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      background-color: var(--bg-dark);
      color: var(--text-primary);
      margin: 0;
      display: flex;
      transition: background-color 0.3s, color 0.3s;
    }

    .visually-hidden {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }

    /* --- Layout: Sidebar --- */
    .sidebar {
      width: 250px;
      background-color: var(--bg-light);
      padding: 1.5em;
      height: 100vh;
      display: flex;
      flex-direction: column;
      flex-shrink: 0;
      transition: background-color 0.3s;
    }
    
    /* --- Layout: Main Content --- */
    .main-content {
      flex-grow: 1;
      padding: 1.5em;
      overflow-y: auto;
      height: 100vh;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2em;
    }

    h1, h2 {
      color: var(--text-primary);
      margin: 0;
    }
    
    .header-right {
      display: flex;
      align-items: center;
      gap: 1.5em;
    }

    /* --- Component: Sidebar --- */
    .sidebar-header {
      font-size: 1.5em;
      font-weight: bold;
      text-align: center;
      margin-bottom: 2em;
    }

    .sidebar-nav ul {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    .sidebar-nav a {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 15px;
      color: var(--text-secondary);
      text-decoration: none;
      border-radius: 8px;
      transition: background-color 0.2s, color 0.2s;
      font-weight: 500;
    }

    .sidebar-nav a:hover {
      background-color: var(--hover-bg);
      color: var(--text-primary);
    }

    .sidebar-nav a.active {
      background-color: var(--accent);
      color: var(--bg-dark);
    }

    .sidebar-nav a .fa-fw {
      width: 20px;
      text-align: center;
    }
    
    /* --- Component: Card --- */
    .card {
      background-color: var(--bg-light);
      padding: 1.5em;
      border-radius: 12px;
      margin-bottom: 1.5em;
      transition: background-color 0.3s;
    }

    /* --- Component: KPI Cards --- */
    .kpi-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5em;
    }

    /* --- Component: Table --- */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1.5em;
    }
    
    /* --- Component: Theme Toggle --- */
    .theme-toggle {
      background: none;
      border: none;
      color: var(--text-primary);
      font-size: 1.2em;
      cursor: pointer;
      padding: 0.5em;
      border-radius: 8px;
      transition: background-color 0.2s;
    }

    .theme-toggle:hover {
      background-color: var(--hover-bg);
    }

    /* --- Component: User Dropdown --- */
    .user-dropdown {
      position: relative;
    }

    .dropdown-toggle {
      background: none;
      border: none;
      color: var(--text-primary);
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      font-family: inherit;
      font-size: 1em;
      padding: 0.5em 0.75em;
      border-radius: 8px;
      transition: background-color 0.2s;
    }

    .dropdown-toggle:hover {
      background-color: var(--hover-bg);
    }

    .dropdown-toggle span {
      font-weight: 600;
    }

    .dropdown-toggle .fa-chevron-down {
      font-size: 0.8em;
      transition: transform 0.2s ease-in-out;
    }

    .user-dropdown.open .fa-chevron-down {
      transform: rotate(180deg);
    }

    .dropdown-menu {
      display: none;
      position: absolute;
      right: 0;
      top: calc(100% + 10px);
      background-color: var(--bg-light);
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
      border: 1px solid var(--table-border);
      border-radius: 8px;
      z-index: 1;
      overflow: hidden;
      padding: 0.5em 0;
    }

    .dropdown-menu.show {
      display: block;
    }

    .dropdown-item {
      color: var(--text-secondary);
      padding: 10px 15px;
      text-decoration: none;
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 0.95em;
      transition: background-color 0.2s, color 0.2s;
    }

    .dropdown-item:hover {
      background-color: var(--hover-bg);
      color: var(--text-primary);
    }
  </style>
</head>
<body>
  <nav class="sidebar">
    <div class="sidebar-header">
      Revartix Platform
    </div>
    <div class="sidebar-nav">
      <ul>
        <li><a href="#" class="active"><i class="fa-solid fa-fw fa-chart-pie"></i> Reports</a></li>
        <li><a href="#"><i class="fa-solid fa-fw fa-gear"></i> Settings</a></li>
      </ul>
    </div>
  </nav>

  <main class="main-content">
    <header class="header">
      <h1>Dashboard</h1>
      <div class="header-right">
        <% if (user) { %>
          <div class="user-dropdown" id="user-dropdown">
            <button class="dropdown-toggle" id="dropdown-toggle" aria-haspopup="true" aria-expanded="false">
              <span><%= user.name %></span>
              <i class="fas fa-chevron-down" aria-hidden="true"></i>
            </button>
            <div class="dropdown-menu" id="dropdown-menu">
              <a href="/logout" class="dropdown-item">
                <i class="fa-solid fa-arrow-right-from-bracket" aria-hidden="true"></i>
                <span>Logout</span>
              </a>
            </div>
          </div>
        <% } %>
        <button class="theme-toggle" id="theme-toggle" aria-label="Toggle Theme">
          <i class="fas fa-moon" aria-hidden="true"></i>
        </button>
      </div>
    </header>

    <section class="kpi-container card" aria-labelledby="kpi-heading">
      <h2 id="kpi-heading" class="visually-hidden">Key Performance Indicators</h2>
      <div class="kpi-card">
        <p class="kpi-title">Total Readings</p>
        <p class="kpi-value" id="total-readings">0</p>
      </div>
      <div class="kpi-card">
        <p class="kpi-title">Unique Devices</p>
        <p class="kpi-value" id="unique-devices">0</p>
      </div>
      <div class="kpi-card">
        <p class="kpi-title">Overall Average</p>
        <p class="kpi-value" id="average-value">0</p>
      </div>
    </section>

    <section class="card" aria-labelledby="chart-heading">
       <h2 id="chart-heading" class="visually-hidden">Average Data Value Chart</h2>
       <div id="main-chart" style="width: 100%; height: 400px;"></div>
    </section>

    <section class="card table-container" aria-labelledby="table-heading">
      <h2 id="table-heading">Detailed Readings</h2>
      <table>
        <thead>
          <tr>
            <th scope="col">Device Name</th>
            <th scope="col">Data Value</th>
            <th scope="col">Timestamp</th>
          </tr>
        </thead>
        <tbody>
          <% if (records && records.length > 0) { %>
            <% records.forEach(record => { %>
              <tr>
                <td><%= record.x_name || 'N/A' %></td>
                <td><%= record.x_studio_data_value %></td>
                <td><%= record.x_studio_timestamp %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3">No records found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </section>
  </main>
  
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Safely parse EJS data
      const records = <%- JSON.stringify(records || []) %>;
      let myChartInstance = null;
      let chartOption = null;

      /**
       * Initializes and manages the theme toggle functionality.
       */
      function setupThemeToggle() {
        const themeButton = document.getElementById('theme-toggle');
        const themeIcon = themeButton.querySelector('i');
        const htmlEl = document.documentElement;

        const applyTheme = (theme) => {
          htmlEl.setAttribute('data-theme', theme);
          themeIcon.className = theme === 'light' ? 'fas fa-sun' : 'fas fa-moon';
          localStorage.setItem('theme', theme);
          
          // Re-render chart with the new theme if it exists
          if (myChartInstance) {
            myChartInstance.dispose();
            myChartInstance = echarts.init(document.getElementById('main-chart'), theme);
            myChartInstance.setOption(chartOption);
          }
        };
        
        // Set initial theme based on localStorage
        const currentTheme = localStorage.getItem('theme') || 'dark';
        applyTheme(currentTheme);

        themeButton.addEventListener('click', () => {
          const newTheme = htmlEl.getAttribute('data-theme') === 'light' ? 'dark' : 'light';
          applyTheme(newTheme);
        });
      }

      /**
       * Initializes and manages the user profile dropdown.
       */
      function setupUserDropdown() {
        const dropdown = document.getElementById('user-dropdown');
        if (!dropdown) return; // Exit if dropdown doesn't exist

        const toggle = dropdown.querySelector('#dropdown-toggle');
        const menu = dropdown.querySelector('#dropdown-menu');

        toggle.addEventListener('click', (event) => {
          event.stopPropagation();
          const isExpanded = menu.classList.toggle('show');
          dropdown.classList.toggle('open');
          toggle.setAttribute('aria-expanded', isExpanded);
        });

        // Close dropdown when clicking anywhere else on the page
        document.addEventListener('click', () => {
          if (menu.classList.contains('show')) {
            menu.classList.remove('show');
            dropdown.classList.remove('open');
            toggle.setAttribute('aria-expanded', 'false');
          }
        });
      }

      /**
       * Renders all dashboard components like KPIs and Charts.
       */
      function renderDashboard() {
        try {
          const validRecords = records.filter(r => r && r.x_name);
          if (validRecords.length === 0) {
            document.getElementById('main-chart').innerText = "No data available to display.";
            return;
          }

          updateKPIs(validRecords);
          renderChart(validRecords);
        
        } catch (error) {
          console.error("Error rendering dashboard:", error);
          const chartEl = document.getElementById('main-chart');
          if(chartEl) chartEl.innerText = "Could not load chart data due to an error.";
        }
      }
      
      /**
       * Updates the KPI cards with calculated data.
       * @param {Array} data The array of valid records.
       */
      function updateKPIs(data) {
        document.getElementById('total-readings').innerText = data.length;
        document.getElementById('unique-devices').innerText = new Set(data.map(r => r.x_name)).size;
        const average = (data.reduce((sum, r) => sum + (parseFloat(r.x_studio_data_value) || 0), 0) / data.length);
        document.getElementById('average-value').innerText = average.toFixed(2);
      }

      /**
       * Renders the main bar chart using ECharts.
       * @param {Array} data The array of valid records.
       */
      function renderChart(data) {
        const chartDom = document.getElementById('main-chart');
        const deviceData = {};
        
        data.forEach(record => {
          const deviceName = record.x_name;
          if (!deviceData[deviceName]) deviceData[deviceName] = { sum: 0, count: 0 };
          deviceData[deviceName].sum += (parseFloat(record.x_studio_data_value) || 0);
          deviceData[deviceName].count += 1;
        });

        const deviceNames = Object.keys(deviceData);
        const averageValues = deviceNames.map(name => (deviceData[name].sum / deviceData[name].count).toFixed(2));
        
        const initialTheme = localStorage.getItem('theme') || 'dark';
        myChartInstance = echarts.init(chartDom, initialTheme);

        chartOption = {
          title: { text: 'Average Data Value per Device', textStyle: { color: 'var(--chart-text)' } },
          tooltip: { trigger: 'axis', axisPointer: { type: 'shadow' } },
          xAxis: { type: 'category', data: deviceNames, axisLabel: { color: 'var(--text-secondary)' } },
          yAxis: { type: 'value', axisLabel: { color: 'var(--text-secondary)' } },
          series: [{ name: 'Average Value', type: 'bar', data: averageValues }],
          grid: { top: 60, right: 20, bottom: 30, left: 50 }
        };
        
        myChartInstance.setOption(chartOption);
      }
      
      // --- Initialize all parts of the application ---
      renderDashboard();
      setupThemeToggle();
      setupUserDropdown();
    });
  </script>
</body>
</html>